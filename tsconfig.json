{
  "compilerOptions": {
      "target": "es5",
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": false,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "baseUrl": ".",
      "paths": {
          "components/*": ["src/common/components/*"],
          "hooks/*": ["src/lib/hooks/*"],
          "utils/*": ["src/lib/utils/*"],
          "lib/*": ["src/lib/*"],
          // "app/*": ["src/app/*"],
          "features/*": ["src/lib/features/*"],
          "styles/*": ["src/common/styles"]
      },
      "incremental": true
  },
  "exclude": ["node_modules"],
  "include": [
      "next-env.d.ts",
      "**/*.ts",
      "**/*.tsx",
      "pages/_app.tsx",
      "pages/api/legacy-token.js"
  ]
}